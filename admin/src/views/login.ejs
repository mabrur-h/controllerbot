<%- include("parts/header") %> 

<section class="w-100 vh-100 d-flex flex-column align-items-center justify-content-center">
    <div class="container d-flex flex-column">
        <h3 class="text-center mb-3">Group Controller Bot Admin Panel</h3>
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-5 col-md-8">
                <form action="/login" method="POST" class="w-100">
                    <div class="form-floating mb-3">
                        <input type="email" required name="email" class="form-control" id="floatingInput" required placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                      </div>
                      <div class="form-floating">
                        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                      </div>
                      <button type="submit" class="mt-3 btn btn-primary w-100">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include("parts/footer") %> 